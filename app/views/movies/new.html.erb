
<h1>New movie</h1>
<img src="<%=@movie.picture_url%>"> 
<% form_for(@movie) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :title %><br />
    <%= f.text_field :title %>
  </p>
  <p>
    <%= f.label :date %><br />
    <%= f.date_select :date %>
  </p>
  <p>
    <%= f.label :time %><br />
    <%= f.time_select :time %>
  </p>
  <p>
    <%= f.label :duration %><br />
    <%= f.text_field :duration %>
  </p>
  <p>
    <%= f.label :picture_url %><br />
    <%= f.text_field :picture_url %>

  </p>
  <p>
    <%= f.label :rooms_id %><br />
   <%= f.select :room_id,  Room.find(:all).collect {|d| [ d.name,d.id ] } %>
  </p>
  <p>
    <%= f.submit "Create" %>
  </p>
<% end %>

<%= link_to 'Back to rooms', rooms_path %>
